<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="adiasoft.mardee.MainActivity">

    <TextView android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Géneros Literarios"
        android:gravity="center_horizontal"
        android:textSize="25sp"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        android:textColor="#333"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50sp"
        android:gravity="center">
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Novela"
            android:background="@drawable/btn_drawable"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_novela"></Button>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Poesía"
            android:background="@drawable/btn_drawable"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_poesia"></Button>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Cuento"
            android:background="@drawable/btn_drawable"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_cuento"></Button>
        <Button
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Opinión"
            android:background="@drawable/btn_drawable"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_marginBottom="10dp"
            android:id="@+id/btn_opinion"></Button>
    </LinearLayout>

</LinearLayout>