<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="#e2e3e8"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="adiasoft.mardee.MainActivity"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#e2e3e8"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/actionEvent"
                android:textSize="25sp"
                android:gravity="center_horizontal"
                android:text="Libro"
                android:layout_marginBottom="15sp"
                android:textStyle="bold"
                android:textColor="#010302"
                android:layout_width="fill_parent"
                android:layout_height="match_parent" />
            <ScrollView android:layout_height="450dp"
                android:layout_width="fill_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_gravity="center"
                android:id="@+id/sc"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#010302"
                    android:lineSpacingExtra="20dp"
                    android:textSize="30dp"
                    android:id="@+id/tv" />
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/mas"
                    android:background="@drawable/btn_mas"
                    android:text="+"></Button>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/start"
                    android:background="@drawable/btn_start"
                    android:src="@drawable/ic_action_start"></ImageButton>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/pause"
                    android:background="@drawable/btn_pausa"
                    android:src="@drawable/ic_action_pause"></ImageButton>
                <Button
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/menos"
                    android:background="@drawable/btn_menos"
                    android:text="-"></Button>
                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#138496"
                    android:id="@+id/btn_configuracion"
                    android:background="@drawable/btn_start"
                    android:scaleType="centerCrop"
                    android:padding="10dp"
                    android:src="@drawable/sett"></ImageButton>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_megusta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:clickable="false"
                        android:textColor="#010302"
                        android:text="TEST TEST" >
                    </TextView>
                    <ImageButton
                        android:id="@+id/btn_megusta"
                        android:layout_marginStart="5dp"
                        android:layout_width="75px"
                        android:src="@drawable/th_nothi"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        android:background="#00000000"
                        android:layout_height="75px"></ImageButton>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/btn_nomegusta"
                        android:layout_marginStart="15dp"
                        android:layout_width="75px"
                        android:scaleType="centerCrop"
                        android:padding="0dp"
                        android:background="#00000000"
                        android:src="@drawable/th_nothi_do"
                        android:layout_height="75px"></ImageButton>
                    <TextView
                        android:id="@+id/tv_nomegusta"
                        android:layout_marginStart="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="10sp"
                        android:clickable="false"
                        android:textColor="#010302"
                        android:text="TEST TEST" >
                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="5dp"
                android:gravity="center"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="Publicidad"
                    android:background="#fff"
                    android:layout_gravity="center"
                    android:gravity="center"
                    ></TextView>
            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Comentarios"
                android:textAlignment="textStart"
                android:background="#f9f9f9"
                android:textStyle="bold"
                android:textColor="#010302"
                android:paddingStart="5dp"
                android:textSize="20dp"></TextView>
            <ScrollView
                android:layout_width="fill_parent"
                android:fillViewport="true"
                android:layout_height="wrap_content">
                <adiasoft.mardee.NonScrollListView
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/id_lv_comentarios"
                    android:background="#f9f9f9"
                    ></adiasoft.mardee.NonScrollListView>
            </ScrollView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#f9f9f9"
                android:layout_weight="10"
                android:orientation="horizontal">
                <EditText
                    android:layout_width="280dp"
                    android:id="@+id/edt_comentario"
                    android:layout_marginRight="15dp"
                    android:textColor="#333"
                    android:layout_weight="6"
                    android:hint="Escribe un comentario..."
                    android:layout_height="wrap_content"></EditText>

                <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/boton_rojo_2"
                    android:src="@drawable/ic_action_send"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:id="@+id/btn_comentar"></ImageButton>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>